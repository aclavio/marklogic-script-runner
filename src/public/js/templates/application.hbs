<div>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <span class="navbar-brand">Find Scripts</span>
      </div>
      <div class="collapse navbar-collapse">
        <form name="findForm" class="navbar-form navbar-right">
          <div class="form-group">
            <label for="databaseSelect">Database</label>
            <select id="databaseSelect" class="form-control">
            {{#each db in databases}}
              <option value="{{db}}">{{db}}</option>
            {{/each}}
            </select>
          </div>
          <button type="submit" class="btn btn-default" {{action 'scriptSearch' bubbles=false}}>Search</button>
        </form>
      </div>
    </div>
  </nav>
  
  <div id="ScriptsContainer">
    {{outlet}}
  </div>
  
</div>